<!DOCTYPE html>
<html>
  <head>
    <title>Fechas</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</head>
  <body>
    <div class="titulos">
      <h1 style="position: absolute; left: 45%;top: 0%;">Grupo 2</h1>
      <h2 style="position: absolute; left: 35%; top: 10%;">Medidas a lo largo del tiempo</h2>
    </div>
    <div class="row" style="position: absolute; top: 20%; left: 10%;">
        <div style="width: 700px; height: 700px; display: inline-block; margin-right: 100px;">
          <canvas id="myChart"></canvas>
        </div>

      <div class="col" style="display: inline-block; margin-right: 10px;">
        <form action="">
          <label style="font-size: 25px;">Fecha inicio:</label><br>
          <input type="date" style="width: 250px; height: 35px; border-radius: 8px; font-size: 20px;" /><br><br><br>
          <label style="font-size: 25px;">Fecha fin:</label><br>
          <input type="date" style="width: 250px; height: 35px; border-radius: 8px; font-size: 20px;" /><br><br><br>
          <input type="submit" value="Consultar" style=" font-size: 23px; border-radius: 8px; width: 250px; height: 40px; background-color: rgb(125, 227, 144);"/>
        </form>
      </div>

    </div>

    <script>
      const ctx = document.getElementById("myChart");
      
      var ejeY = [0, 56, 20, 36, 80, 40, 30, 20, 25, 30, 12, 60];
      var ejeX = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]
      var titulo = "Temperatura"
      
      new Chart(ctx, {
        type: "line",
        data: {
          labels: ejeX,
          datasets: [
            {
              label: titulo,
              data: ejeY,
              tension: 0.5,
              borderColor: 'rgb(115, 222, 135)',
              pointBackgroundColor: 'rgba(115, 222, 135)',
            },
          ],
        },
        options: {
          scales: {
            y : {
            min : 0,
            grid:{
                display:false
            }
            },
            x: {
              ticks: { color: 'rgb(10, 10, 10)'},
              grid:{
                display:false
              }
            }
          },
        },
      });
    </script>
  </body>
</html>
